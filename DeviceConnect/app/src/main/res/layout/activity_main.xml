<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" android:background="#000">

    <Button
        android:layout_width ="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"
        android:text="Start Test"
        android:layout_marginTop="10dip"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connectionspeeed"
        android:layout_below="@id/btnStart"
        android:text="Connection speed:"
        android:layout_marginTop="10dp" android:textColor="#FFFFFF" android:textSize="16dip"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:text="Speed"
        android:layout_below="@+id/connectionspeeed"
        android:layout_marginTop="10dp" android:textColor="#FFFFFF" android:textSize="16dip"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:text="@string/Progress"
        android:layout_below="@+id/speed"
        android:layout_marginTop="10dp" android:textColor="#FFFFFF" android:textSize="16dip"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/networktype"
        android:text="Network Type"
        android:layout_below="@id/progress"
        android:layout_marginTop="10dp" android:textColor="#FFFFFF" android:textSize="16dip"/>


    </RelativeLayout>
