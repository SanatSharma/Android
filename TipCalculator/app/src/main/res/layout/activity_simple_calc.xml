<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanat.tipcalculator.SimpleCalcActivity"
    android:orientation="vertical"    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pretip_string"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/pre_tip_amount"
            android:inputType="numberDecimal"
            android:hint="Enter amount"
            android:ems="6"/>
  <!--          android:textSize="25sp"/>
-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="0pt"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tip amount: "
            android:textSize="26sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tip_amount"
            android:inputType="numberDecimal"
            android:hint="Enter or select button"
            android:ems="8"></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="0pt"
        android:layout_marginRight="0pt">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="12%"
            android:textSize="8pt"
            android:id="@+id/twelvepercent_button"
            android:background="#2a7a1a"
            android:textColor="#fff"
            android:layout_marginRight="1pt">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="15%"
            android:textSize="8pt"
            android:id="@+id/fifteenpercent_button"
            android:background="#2a7a1a"
            android:layout_marginRight="1pt" android:textColor="#fff">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="18%"
            android:textSize="8pt" android:layout_marginRight="1pt"
            android:id="@+id/eighteenpercent_button"
            android:background="#2a7a1a"
            android:textColor="#fff">
        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Custom Tip"
            android:textSize="5pt"
            android:paddingTop="5dp"
            android:id="@+id/customtip_button"
            android:background="#2a7a1a"
            android:textColor="#fff">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="30dp"
            android:id="@+id/result">
        </TextView>

    </LinearLayout>

</LinearLayout>
