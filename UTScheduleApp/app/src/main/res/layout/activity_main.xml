<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UTVolleyballText"
        android:textColor="#CC5500"
        android:textSize="35dp"
        android:text="UT VOLLEYBALL"
        android:paddingRight="30dp"
        />

    <ImageView
        android:layout_width = "60dp"
        android:layout_height="60dp"
        android:id= "@+id/volleyball_image"
        android:src="@drawable/utvolleyball"
        android:layout_toRightOf="@id/UTVolleyballText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UtFootballText"
        android:textColor="#CC5500"
        android:textSize="40dp"
        android:text="UT FOOTBALL"
        android:layout_below="@id/UTVolleyballText"
        android:paddingTop="35dp"
        android:paddingRight="40dp"
        />

    <ImageView
        android:layout_width = "60dp"
        android:layout_height="70dp"
        android:id= "@+id/UtFootball"
        android:paddingTop="10dp"
        android:src="@drawable/utfootball"
        android:layout_toRightOf="@id/UtFootballText"
        android:layout_below="@id/volleyball_image"
        />



</RelativeLayout>
